# Dockerfile pour le service de training
FROM python:3.9-slim

# Définir le répertoire de travail
WORKDIR /app

# Installer les dépendances système nécessaires
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copier les fichiers de requirements
COPY requirements.txt .

# Installer les dépendances Python
RUN pip install --no-cache-dir -r requirements.txt

# Copier le script de training
COPY training_models_final.py .

# Créer les répertoires pour les données et modèles
RUN mkdir -p /app/data /app/models

# Définir les permissions
RUN chmod +x training_models_final.py

# Exposer le répertoire de travail comme volume
VOLUME ["/app/data", "/app/models"]

# Healthcheck pour vérifier que le training est terminé
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import os; exit(0 if os.path.exists('/app/models/model.pkl') else 1)" || exit 1

# Commande par défaut
CMD ["python", "training_models_final.py"]